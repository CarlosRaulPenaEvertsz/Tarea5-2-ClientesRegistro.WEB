@model IEnumerable<ClientesRegistro.MODELS.Models.Cliente>

@{
                /**/

                ViewBag.Title = "Listado de Clientes";
}

<h2>Listado de Clientes</h2>

<p>
    <div class="row">
        <div class="col-sm-2">
            @Html.ActionLink("Crear Cliente Nuevo", "Create", new { controller = "Clientes" }, new { @class = "btn btn-success" }) 
        </div>
        <div class="col-sm-2">
            <input class="form-control" id="input_search" name="search" type="text" placeholder="Buscar Cliente..." />
        </div>
    </div>
</p>

<table class="table" id="cuerpolistado">


    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Comercial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Nacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula_RNC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoNCF1.NombreComprobanteFiscal)
        </th>
        <th></th>
    </tr>

    
        @foreach (var item in Model)
        {

        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Comercial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula_RNC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoNCF1.NombreComprobanteFiscal)
            </td>

            <td>
                @Html.Raw("<a data-modal='' href='/Clientes/Edit/" + item.Id + "' id='" + item.Id + "' title='Modificar'> <span class='glyphicon glyphicon-edit'> </span> <a/>")
                @Html.Raw("<a data-modal='' href='/Clientes/Details/" + item.Id + "' id='" + item.Id + "' title='Detalles'> <span class='glyphicon glyphicon-th-list'> </span> <a/>")
                @Html.Raw("<a data-modal='' href='/Clientes/Delete/" + item.Id + "' id='" + item.Id + "' title='Eliminar'> <span class='glyphicon glyphicon-trash'> </span> <a/>")

                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>

        }
    
    </table>

@section scripts{
    <script>
                $(document).ready(function () {
                    $("#input_search").on("keyup", function () {
                        var value = $(this).val().toLowerCase();
                        $("#cuerpolistado tr").filter(function () {
                            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                        });
                    });
                });
    </script>
}
